@model CoffeeShopMVC.Models.Order

@{
    ViewData["Title"] = "Szczegóły zamówienia";
}

<h2>Podsumowanie zamówienia</h2>

<div>
    <p>Numer zamówienia: @Model.OrderId</p>
    <p>Data: @Model.OrderDate.ToShortDateString()</p>
    <p>Imię: @Model.CustomerInfo.FirstName</p>
    <p>Nazwisko: @Model.CustomerInfo.LastName</p>
    <p>Telefon: @Model.CustomerInfo.Phone</p>
    <p>Adres dostawy: @Model.CustomerInfo.DeliveryAddress</p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Ilość</th>
                <th>Cena (szt.)</th>
                <th>Razem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity * item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Łączna kwota: @Model.TotalPrice</strong></p>
</div>